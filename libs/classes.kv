#: import get_color_from_hex kivy.utils.get_color_from_hex
#: set GRADIENT_LIGHT get_color_from_hex("DC5555")
#: set GRADIENT_DARK get_color_from_hex("861d1d")
#: set YELLOW get_color_from_hex("EAED71")
#: set GREEN get_color_from_hex("B6D953")
#: set LIGHT_ACCENT_COLOR get_color_from_hex("FDEBEB")
#: set DARK_TEXT_COLOR get_color_from_hex("461616")
#: set BUTTON_TEXT_COLOR get_color_from_hex("892727")
#: set FONT_SIZE sp(20)
#: set RADIUS sp(15)
#: import Gradient kivy_gradient.Gradient
#: import AKOnboarding libs.modules.onboarding.AKOnboarding
#: import AKOnboardingItem libs.modules.onboarding.AKOnboardingItem
#: import CardTextField libs.modules.CardTextField.CardTextField

<RoundButton@MDFillRoundFlatButton>
    font_name:"Montserrat-Bold"
    font_size: FONT_SIZE
    _radius: dp(15)

<GradientButton@MDFillRoundFlatButton>
    _radius: RADIUS
    gradient_light: get_color_from_hex("CB4E4E")
    gradient_dark: GRADIENT_DARK
    font_name:"Montserrat-Bold"
    font_size: FONT_SIZE
    text_color: [.99,.99,.99,1]

<HeadingLabel@MDLabel>
    halign:"center"
    size_hint_y: None
    font_name:"Montserrat-Bold"
    font_size:"30sp"

<ChatDialogLeft@MDCard>
    size_hint_y: None
    size_hint_x: .6
    height: "120dp"
    radius: dp(60) , dp(60), dp(60), dp(0)
    elevation: 30
    padding: "30dp"
    text:""
    left:True
    canvas:
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: self.radius
            texture: Gradient.horizontal(GREEN, YELLOW) if not root.left else Gradient.horizontal(YELLOW, GREEN)
            
    MDLabel:
        text: root.text
        font_name:"RobotoMedium"
        halign:"center"

<ChatDialogRight@ChatDialogLeft>
    left: False
    radius: dp(60), dp(60), dp(0) , dp(60)

<TextLabel@MDLabel>
    size_hint_x:.8
    text: root.text
    font_name:"RobotoMedium"
    halign:"center"
    font_size:"18sp"
    theme_text_color:"Custom"
    text_color: GREEN